# Template PKGBUILD to be used by CPack to build archlinux packages
pkgname=@PROJECT_NAME@
pkgver=@PROJECT_VERSION@
pkgrel=1
epoch=
pkgdesc="build files for programming tiva microcontrollers"
arch=('any')
url="https://github.com/m-elwin/tiva-cmake/"
license=('MIT')
groups=()
depends=(arm-none-eabi-gcc arm-none-eabi-newlib)
makedepends=()
checkdepends=()
optdepends=(arm-none-eabi-gdb ti-cgt-arm)
provides=(@PROJECT_NAME@)
conflicts=()
replaces=()
backup=()
options=(!strip) # disable stripping of symbols since we are installing debugging libraries
install=
changelog=
source=("tiva-cmake-$pkgver-any.tar.gz")
noextract=()
md5sums=('SKIP') 
validpgpkeys=()

package() {
        mkdir $pkgdir/usr
	cp -r "$pkgname-$pkgver-any/"* $pkgdir/usr
}
